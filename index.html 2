        }

        .question-container {
            background-color: #f8d5e4; /* Hồng nhạt */
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .question {
            font-size: 20px;
            font-weight: bold;
            color: #333;
